
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-container">
    <h2>@ViewBag.Title</h2>
    <p>@ViewBag.Message</p>

    <div class="row">
        <div class="col-md-6">
            <h3>Наши контакты</h3>
            <address>
                123 Примерная улица<br />
                Москва, 123456<br />
                <abbr title="Телефон">Тел:</abbr> +7 (123) 456-7890
            </address>

            <address>
                <strong>Поддержка:</strong> <a href="mailto:support@swipevibe.com">support@swipevibe.com</a><br />
                <strong>Маркетинг:</strong> <a href="mailto:marketing@swipevibe.com">marketing@swipevibe.com</a>
            </address>
        </div>

        <div class="col-md-6">
            <h3>Напишите нам</h3>
            <form>
                <div class="form-group">
                    <label for="name">Имя</label>
                    <input type="text" class="form-control" id="name" placeholder="Введите ваше имя">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Введите ваш email">
                </div>
                <div class="form-group">
                    <label for="message">Сообщение</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Введите ваше сообщение"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Отправить</button>
            </form>
        </div>
    </div>
</div>

