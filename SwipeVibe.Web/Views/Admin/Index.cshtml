@{
    ViewBag.Title = "Административная панель";
}

@section Styles {
    @Styles.Render("~/Content/admin")
}

<div class="admin-container">
    <div class="row">
        <div class="col-md-3">
            <div class="admin-sidebar">
                <div class="admin-nav">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="@Url.Action("Index", "Admin")">Обзор</a></li>
                        <li><a href="@Url.Action("Users", "Admin")">Пользователи</a></li>
                        <li><a href="@Url.Action("Content", "Admin")">Контент</a></li>
                        <li><a href="@Url.Action("Settings", "Admin")">Настройки</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="admin-content">
                <h2>Обзор</h2>
                
                <div class="admin-stats">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="stat-box">
                                <div class="stat-title">Пользователи</div>
                                <div class="stat-value">1,234</div>
                                <div class="stat-change positive">+12% за месяц</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <div class="stat-title">Видео</div>
                                <div class="stat-value">5,678</div>
                                <div class="stat-change positive">+7% за месяц</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <div class="stat-title">Комментарии</div>
                                <div class="stat-value">9,012</div>
                                <div class="stat-change positive">+23% за месяц</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="recent-activity">
                    <h3>Последние действия</h3>
                    
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Действие</th>
                                <th>Пользователь</th>
                                <th>Дата</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Регистрация нового пользователя</td>
                                <td>user123</td>
                                <td>2023-03-15 10:30</td>
                                <td><a href="#" class="btn btn-xs btn-info">Подробнее</a></td>
                            </tr>
                            <tr>
                                <td>Загрузка нового видео</td>
                                <td>videomaker</td>
                                <td>2023-03-15 09:45</td>
                                <td><a href="#" class="btn btn-xs btn-info">Подробнее</a></td>
                            </tr>
                            <tr>
                                <td>Жалоба на контент</td>
                                <td>moderator</td>
                                <td>2023-03-14 18:20</td>
                                <td><a href="#" class="btn btn-xs btn-warning">Рассмотреть</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/admin")
} 