
@{
    ViewBag.Title = "Index";
}

<!-- Заголовок страницы -->
<div class="watch-header">
    <h1 class="animate-glow-text">Исследуй <span>новые видео</span></h1>
    <p>Открывай для себя популярные видео из разных категорий</p>
</div>

<!-- Категории и фильтры -->
<div class="category-filter neomorph-card">
    <div class="filter-list">
        <button class="filter-btn active neomorph-btn">
            <i class="fas fa-fire"></i> Популярное
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-chart-line"></i> Тренды
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-star"></i> Новое
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-music"></i> Музыка
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-gamepad"></i> Игры
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-film"></i> Фильмы
        </button>
        <button class="filter-btn neomorph-btn">
            <i class="fas fa-laugh-beam"></i> Юмор
        </button>
    </div>

    <div class="filter-controls">
        <button class="filter-control-btn neomorph-btn">
            <i class="fas fa-sort-amount-down"></i>
        </button>
        <button class="filter-control-btn neomorph-btn">
            <i class="fas fa-filter"></i>
        </button>
    </div>
</div>

<!-- Сетка видео -->
<div class="video-grid">
    <!-- Видео карточка 1 -->
    <div class="video-item neomorph-card">
        <div class="video-thumbnail">
            <img src="~/assets/images/video-thumb-1.jpg" alt="Видео превью">
            <span class="video-duration">3:45</span>
            <div class="video-overlay">
                <button class="play-btn neomorph-icon">
                    <i class="fas fa-play"></i>
                </button>
            </div>
        </div>
        <div class="video-info">
            <div class="video-author">
                <div class="author-avatar neomorph-icon">
                    <img src="~/Content/assets/images/avatar1.jpg" alt="Автор">
                </div>
                <h3 class="video-title">10 лучших игр десятилетия, которые стоит попробовать</h3>
            </div>
            <div class="video-stats">
                <div class="author-name">GameReviewer</div>
